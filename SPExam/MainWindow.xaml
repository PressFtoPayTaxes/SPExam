        <TextBox Name="countTextBox"  HorizontalAlignment="Left" Height="23" Margin="203,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="149"/>
        <Button Content="Пуск" HorizontalAlignment="Left" Margin="151,86,0,0" VerticalAlignment="Top" Width="255" Height="63" Click="ArrayButtonClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,237,0,0" TextWrapping="Wrap" Text="URL файла:" VerticalAlignment="Top"/>
        <TextBox Name="urlTextBox"  HorizontalAlignment="Left" Height="23" Margin="129,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="223"/>
        <Button Content="Скачать" HorizontalAlignment="Left" Margin="151,297,0,0" VerticalAlignment="Top" Width="255" Height="63" Click="DownloadButtonClick"/>


    </Grid>
</Window>
